<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="axis_helpdesk_lock_ticket_wizard" model="ir.ui.view">
            <field name="name">lock.helpdesk.ticket.wizard.form</field>
            <field name="model">lock.helpdesk.ticket.wizard</field>
            <field name="arch" type="xml">
                <form string="Lock Ticket">
                    <group>
                        <group>
                            <field name="lock_start_date" required="1"/>
                        </group>
                        <group>
                            <field name="lock_end_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Lock" class="oe_highlight" type="object" name="action_lock_ticket"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>