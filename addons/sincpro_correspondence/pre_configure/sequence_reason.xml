<odoo>
    <record model="ir.sequence" id="sequence_correspondence_reason_roadmap">
        <field name="name">Secuencia hoja de ruta</field>
        <field name="code">seq.correspondence.roadmap</field>
        <field name="prefix">HR/%(year)s/</field>
        <field name="padding">5</field>
    </record>

    <record model="ir.sequence" id="sequence_correspondence_reason_issue">
        <field name="name">Asunto</field>
        <field name="code">seq.correspondence.issue</field>
        <field name="prefix">AS/%(year)s/</field>
        <field name="padding">5</field>
    </record>

    <record model="ir.sequence" id="sequence_correspondence_message">
        <field name="name">Mensaje</field>
        <field name="code">seq.correspondence.message</field>
        <field name="prefix">MJS/%(year)s/</field>
        <field name="padding">5</field>
    </record>
</odoo>
