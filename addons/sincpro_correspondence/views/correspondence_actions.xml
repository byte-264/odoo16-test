<odoo>
    <record model="ir.actions.act_window" id="action_render_correspondence_action">
        <field name="name">Acciones</field>
        <field name="res_model">correspondence.action</field>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.ui.view" id="correspondence_action_tree">
        <field name="name">correspondence.action.tree</field>
        <field name="model">correspondence.action</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="priority" widget="handle" />
                <field name="action" />
            </tree>
        </field>
    </record>
</odoo>
